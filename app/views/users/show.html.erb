<div class="container"> <!--これをすることで、画面いっぱいに左によっていたところに、隙間が生まれる。-->
<div class="row">
<%= render 'users/list', user: @user, book: @book %>
<%= flash[:login] %>
<%= flash[:signup] %>
<div class="col-xs-9">
<h1>Books</h1>
<!-- headでタイトルを作り、tbodyで内容をひょうじさせる -->
	  	         <!--  列という意味 一つのtrで一列-->
	  	    <!-- 作った列の内容を書く -->
<table class="table"> <!-- これをするだけで、テーブルが見違えてきれいになる。titleとopinionの間にも隙間が生まれる。すごい-->
	<thead>
		<tr>
			<th>
			</th>
			<th>
				title
			</th>
			<th>
				opinion
			</th>
		</tr>
	</thead>
	<% @books.each do |book| %>
  <tr>
	<td><%= attachment_image_tag @user, :profile_image, size: '20x20', fallback: "no_image.jpg" %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end %>
</table>
</div>
</div>
</div>