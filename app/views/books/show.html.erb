<div class="container">
<div class="row">
<%= render 'users/list', user: @user, book: @book %>
<%= flash[:edit_ok] %>

<div class="col-xs-9">
<h1>Book detail</h1>

<table class="table">
	<thead>
		<tr>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>プロフィール画像</td>
			<td><%= link_to @book.user.name, user_path(@book.user) %></td> <!--linkすると、本の詳細に飛ぶ。そのため、リンクで、＠book(controllerでインスタンス作ったインスタンスに情報を入れて、renderのところで渡している) -->
			<td><%= @book.title %></td> <!--show actionで作成しているため、このページが呼び出されたときに＠bookインスタンスに空の@bookインスタンスと、@book = Book.find(params[:id])が情報として渡る -->
			<td><%= @book.body %></td>

		 <% if @user.id == current_user.id %>

			<td><%= link_to "Edit", edit_book_path(@book) %></td>
    		<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "削除しますか？"} %></td>
    	 <% end %>
		</tr>
	</tbody>
</table>
